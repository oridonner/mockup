{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "env": {
    "node": true
  },
  "ignorePatterns": ["*.js"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "semi": [2, "always"],
    "arrow-body-style": [0, "always"],
    "@typescript-eslint/no-explicit-any": "off",
    "no-console":"error"
  }
}
